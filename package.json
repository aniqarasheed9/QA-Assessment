{
  "name": "playwright-assessment",
  "version": "1.0.0",
  "private": true,
  "description": "E2E Playwright assessment for Demo Web Shop (Tricentis) with POM, data-driven tests, env configs",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed --project=chromium",
    "test:debug": "cross-env PWDEBUG=1 playwright test --project=chromium",
    "show-report": "playwright show-report",
    "install-browsers": "playwright install --with-deps"
  },
  "devDependencies": {
    "@playwright/test": "^1.47.0",
    "cross-env": "^10.1.0",
    "dotenv": "^16.4.5",
    "faker": "^6.6.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
